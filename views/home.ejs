<%- include("partials/header"); %>

<h1>Home</h1>
<p><%= homeStartingContent %></p>

<% posts.forEach(post => { %>
  <% let url = "/posts/" + post._id + "/" + post.title.toLowerCase().replace(" ", "-"); %>
  <h2>
    <a href="<%= url %>"><%= post.title %></a>
  </h2>
  <p><%= post.content.slice(0, 140) %> ...
    <a href="<%= url %>">Read more</a>
  </p>
<% }); %>

<%- include("partials/footer"); %>
